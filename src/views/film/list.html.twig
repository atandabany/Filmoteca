{% extends 'base.html.twig' %}

{% block title %}Liste des films{% endblock %}

{% block content %}
<div class="container my-5">
    <h2 class="text-center mb-4">
        <i class="fas fa-list" aria-hidden="true"></i> Liste des films
    </h2>

    {% if films is empty %}
        <div class="alert alert-warning text-center">Aucun film disponible pour le moment.</div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="bg-light">
                    <tr>
                        <th>#</th>
                        <th>Titre</th>
                        <th>Année</th>
                        <th>Type</th>
                        <th>Réalisateur</th>
                        <th>Synopsis</th>
                        <th>Ajouté le</th>
                        <th>Modifié le</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    {% for film in films %}
                        <tr>
                            <td>{{ film.id }}</td>
                            <td>{{ film.title }}</td>
                            <td>{{ film.year }}</td>
                            <td>{{ film.type }}</td>
                            <td>{{ film.director }}</td>
                            <td>{{ film.synopsis }}</td>
                            <td>{{ film.createdAt.format('d/m/Y H:i') }}</td>
                            <td>{{ film.updatedAt.format('d/m/Y H:i') }}</td>
                            <td class="text-center">
                                <div class="d-flex flex-column align-items-center">
                                    <a href="/film/read?id={{ film.id }}" class="btn btn-outline-info btn-sm mb-2 w-100">
                                        <i class="fas fa-eye"></i> Détails
                                    </a>
                                    <a href="/film/update?id={{ film.id }}" class="btn btn-outline-warning btn-sm mb-2 w-100">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <a href="/film/delete?id={{ film.id }}" class="btn btn-outline-danger btn-sm w-100" onclick="return confirm('Sûr de vouloir supprimer ce film ?');">
                                        <i class="fas fa-trash-alt"></i> Supprimer
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
